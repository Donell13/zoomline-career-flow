      {
        "type": "range",
        "id": "buttons_border_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Border opacity",
        "default": 100
      },
      {
        "type": "range",
        "id": "buttons_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Corner radius",
        "default": 6
      },
      {
        "type": "range",
        "id": "buttons_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Shadow opacity",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_horizontal_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Horizontal shadow offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_vertical_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Vertical shadow offset",
        "default": 4
