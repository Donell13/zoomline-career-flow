      {
        "type": "range",
        "id": "buttons_shadow_blur",
        "min": 0,
        "max": 20,
        "step": 5,
        "unit": "px",
        "label": "Shadow blur",
        "default": 5
      }
    ]
  },
  {
    "name": "Cards",
    "settings": [
      {
        "type": "header",
        "content": "Card style"
      },
      {
        "type": "select",
        "id": "card_style",
        "options": [
          {
            "value": "standard",
            "label": "Standard"
          },
          {
            "value": "card",
            "label": "Card"
          }
        ],
        "default": "card",
        "info": "Card style affects product cards and other content cards"
      },
      {
        "type": "range",
        "id": "card_image_padding",
        "min": 0,
        "max": 20,
        "step": 2,
        "unit": "px",
        "label": "Image padding",
        "default": 0
      },
      {
        "type": "range",
