[
  {
    "name": "theme_info",
    "theme_name": "Zoomline",
    "theme_version": "1.0.0",
    "theme_author": "Zoomline",
    "theme_documentation_url": "https://help.shopify.com/",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Brand Colors"
      },
      {
        "type": "color",
        "id": "colors_primary",
        "default": "#002D72",
        "label": "Primary color (Navy Blue)",
        "info": "Used for headers, buttons, and key elements"
      },
      {
        "type": "color",
        "id": "colors_accent",
        "default": "#A6FF00",
        "label": "Accent color (Lime Green)",
        "info": "Used for highlights and call-to-action elements"
      },
      {
        "type": "color",
        "id": "colors_background",
        "default": "#FFFFFF",
        "label": "Background color",
        "info": "Main background color for the site"
      },
      {
        "type": "color",
        "id": "colors_text",
        "default": "#333333",
        "label": "Text color",
        "info": "Primary text color"
      },
      {
        "type": "color",
        "id": "colors_text_light",
        "default": "#666666",
        "label": "Light text color",
        "info": "Secondary text color"
      },
      {
        "type": "color",
        "id": "colors_border",
        "default": "#E5E5E5",
        "label": "Border color",
        "info": "Used for borders and dividers"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading font",
        "info": "Used for page headings and titles"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading size",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body font",
        "info": "Used for body text and paragraphs"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body text size",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Page width"
      },
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "unit": "px",
        "label": "Maximum page width",
        "default": 1200
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Section spacing",
        "default": 60
      },
      {
        "type": "range",
        "id": "spacing_grid_horizontal",
        "min": 4,
        "max": 40,
        "step": 4,
        "unit": "px",
        "label": "Horizontal grid spacing",
        "default": 20
      },
      {
        "type": "range",
        "id": "spacing_grid_vertical",
        "min": 4,
        "max": 40,
        "step": 4,
        "unit": "px",
        "label": "Vertical grid spacing",
        "default": 20
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "header",
        "content": "Button style"
      },
      {
        "type": "range",
        "id": "buttons_border_thickness",
