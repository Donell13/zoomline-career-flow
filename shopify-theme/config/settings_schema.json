        "max": 2,
        "step": 1,
        "label": "Text alignment",
        "default": 0,
        "info": "0 = Left, 1 = Center, 2 = Right"
      },
      {
        "type": "range",
        "id": "card_border_thickness",
        "min": 0,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Border thickness",
        "default": 1
      },
      {
        "type": "range",
        "id": "card_border_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Border opacity",
        "default": 10
      },
      {
        "type": "range",
        "id": "card_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Shadow opacity",
        "default": 0
      },
      {
        "type": "range",
        "id": "card_shadow_horizontal_offset",
        "min": -40,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Horizontal shadow offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "card_shadow_vertical_offset",
        "min": -40,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Vertical shadow offset",
        "default": 4
      },
      {
        "type": "range",
        "id": "card_shadow_blur",
        "min": 0,
        "max": 40,
        "step": 5,
        "unit": "px",
        "label": "Shadow blur",
        "default": 5
      }
